<body>

    <h2>Interactive Two-Digit Addition</h2>
    
    <div class="input-group">
        <input type="number" id="numA" value="25" min="10" max="99" required>
        <span>+</span>
        <input type="number" id="numB" value="37" min="10" max="99" required>
        <span>=</span>
        <span id="result">62</span>
    </div>
    
    <p class="note">Enter two-digit numbers (10 to 99) in the fields above.</p>

    <script>
        function calculateSum() {
            const numAInput = document.getElementById('numA');
            const numBInput = document.getElementById('numB');
            const resultSpan = document.getElementById('result');

            const valA = parseInt(numAInput.value) || 0;
            const valB = parseInt(numBInput.value) || 0;

            const sum = valA + valB;
            resultSpan.textContent = sum;
        }

        document.addEventListener('DOMContentLoaded', () => {
            const numAInput = document.getElementById('numA');
            const numBInput = document.getElementById('numB');

            calculateSum();

            numAInput.addEventListener('input', calculateSum);
            numBInput.addEventListener('input', calculateSum);
        });
    </script>

</body>
